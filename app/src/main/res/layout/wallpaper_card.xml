<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp">
    <android.support.v7.widget.CardView
        android:id="@+id/wallpaper_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/card_margin"
        android:layout_marginBottom="@dimen/card_margin"
        android:elevation="3dp"
        card_view:cardCornerRadius="@dimen/card_radius">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="@dimen/thumbnail_width"
                android:layout_height="@dimen/thumbnail_height"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:contentDescription="@string/wallpaper_thumbnail"
                android:focusable="true"
                android:scaleType="fitXY" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/path_margin"
                    android:layout_marginEnd="@dimen/path_margin"
                    android:layout_marginBottom="@dimen/path_margin"
                    android:maxHeight="@dimen/name_height"
                    android:paddingStart="@dimen/name_padding"
                    android:paddingEnd="@dimen/name_padding"
                    android:scrollbarStyle="outsideOverlay"
                    android:scrollbars="vertical"
                    android:textColor="@color/name"
                    android:textSize="@dimen/name_size" />
                <TextView
                    android:id="@+id/path"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/path_margin"
                    android:layout_marginBottom="@dimen/path_margin"
                    android:maxHeight="@dimen/path_height"
                    android:paddingStart="@dimen/path_padding"
                    android:paddingEnd="@dimen/path_padding"
                    android:scrollbarStyle="outsideOverlay"
                    android:scrollbars="vertical"
                    android:textSize="@dimen/path_size" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom|start"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/apply_button"
                        style="@style/Widget.AppCompat.Button.Borderless.Colored"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="0dp"
                        android:paddingStart="@dimen/card_button_padding"
                        android:paddingEnd="@dimen/card_button_padding"
                        android:text="@string/action_apply"
                        android:textColor="@color/applyButton"
                        android:textSize="@dimen/card_button_text_size" />
                    <Button
                        android:id="@+id/internal"
                        style="@style/Widget.AppCompat.Button.Borderless.Colored"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:minWidth="0dp"
                        android:paddingStart="@dimen/card_button_padding"
                        android:paddingEnd="@dimen/card_button_padding"
                        android:text="@string/internal"
                        android:textColor="@color/internal"
                        android:textSize="@dimen/card_button_text_size" />
                    <Button
                        android:id="@+id/remove_button"
                        style="@style/Widget.AppCompat.Button.Borderless.Colored"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="0dp"
                        android:paddingStart="@dimen/card_button_padding"
                        android:paddingEnd="@dimen/card_button_padding"
                        android:text="@string/action_remove"
                        android:textColor="@color/deleteButton"
                        android:textSize="@dimen/card_button_text_size" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>